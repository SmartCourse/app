{
  "name": "smartcourse-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build-local": "cross-env NODE_ENV=development vue-cli-service build --dest  '../backend/public' --mode development",
    "build-staging": "cross-env NODE_ENV=staging vue-cli-service build --dest '../backend/public' --mode staging",
    "build-prod": "cross-env NODE_ENV=production vue-cli-service build --dest '../backend/public' --mode production",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "test": "npm run lint && npm run test:unit"
  },
  "dependencies": {
    "firebase": "^5.5.0",
    "material-icons": "^0.2.3",
    "v-tooltip": "^2.0.0-rc.33",
    "vue": "^2.5.21",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "^3.2.1",
    "@vue/cli-plugin-unit-mocha": "^3.0.1",
    "@vue/cli-service": "^3.2.0",
    "@vue/eslint-config-standard": "^3.0.5",
    "@vue/test-utils": "^1.0.0-beta.27",
    "acorn": "^6.0.5",
    "chai": "^4.1.2",
    "cross-env": "^5.2.0",
    "date-fns": "^2.0.0-alpha.26",
    "eslint": "^5.11.1",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.1.0",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "lint-staged": "^7.2.2",
    "prerender-spa-plugin": "^3.4.0",
    "vue-template-compiler": "^2.5.21"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
